<h1>Sign in!</h1>

<%= render partial: "shared/errors" %>

<form class="" action="<%= session_url %>" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="session[email]">email</label>
  <input type="text" name="session[email]" value="<%= @user.email %>">

  <label for="session[password]">password</label>
  <input type="password" name="session[password]">

  <input type="submit" value="Sign in!">
</form>

<p>or</p>

<%= link_to "Create Account", new_user_url %>
